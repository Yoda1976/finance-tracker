<h1><%= @user.full_name %>'s Profile Details</h1>

<div class="card card-header mt-3 results-block">
    <table class="col-md-12">
      <tbody>
        <tr>
        <td><strong>Name: </strong> <%= @user.full_name %></td>
        <td><strong>Email: </strong> <%= @user.email %></td>
        <td><strong>Actions: </strong> 
            <% if current_user.not_friends_with?(@user.id) %>
                <%= link_to 'Follow friend?', friendships_path(friend: @user),
                    class: "btn btn-sm btn-success", 
                    method: :post %>
            <% else %>
                <span class="badge bg-info">Already following</span>
            <% end %>
        </td>
        </tr>
      </tbody>
    </table>   
  </div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/stocks_list'%>
<% else %>
  <p class='lead'>This user is not tracking any stocks</p>
<% end %>